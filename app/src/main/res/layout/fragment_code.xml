<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/code_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="22sp"
        android:textColor="@color/black"

        android:text="코드 입력"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/mitr_semibold"
        android:textStyle="bold"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/mitr_medium"

        android:text="이메일 인증을 완료하려면 이메일로 전송된 4자리 로그인 코드를 입력하세요."
        android:layout_marginTop="137dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/number1"
            style="@style/PinEntryStyle"
            android:layout_marginEnd="8dp"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/number2"
            style="@style/PinEntryStyle"
            android:layout_marginEnd="8dp"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/number3"
            style="@style/PinEntryStyle"
            android:layout_marginEnd="8dp"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/number4"
            style="@style/PinEntryStyle"
            android:inputType="number"
            android:maxLength="1" />
    </LinearLayout>


    <Button
        android:id="@+id/code_next_bt"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:text="다음으로"
        android:fontFamily="@font/mitr_bold"
        android:textSize="20dp"

        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"

        android:backgroundTint="@color/grayA"
        app:cornerRadius="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"

        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>