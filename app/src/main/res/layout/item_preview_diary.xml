<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="312dp">

    <ImageView
        android:id="@+id/item_diary_profile_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="23dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_diary_post_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="일기 제목"
        android:textColor="@color/black2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_diary_profile_iv"
        app:layout_constraintStart_toEndOf="@+id/item_diary_profile_iv"
        app:layout_constraintTop_toTopOf="@+id/item_diary_profile_iv" />

    <TextView
        android:id="@+id/item_diary_post_content_tv"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:maxLines="8"
        android:text="1월 20일. 애플 님의 일기입니다. ABCabc123"
        android:textColor="@color/black2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/item_diary_profile_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_diary_profile_iv" />

    <ImageView
        android:id="@+id/item_diary_heart_off_iv"
        android:layout_width="22dp"
        android:layout_height="19dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="21dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_heart_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/item_diary_heart_on_iv"
        android:layout_width="22dp"
        android:layout_height="19dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="21dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_heart_on"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/item_diary_gray_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>