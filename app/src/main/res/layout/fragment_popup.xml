<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ResetActivity">


    <ImageView
        android:id="@+id/popup_close_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"


        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popup_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"

        android:fontFamily="@font/mitr_bold"
        android:text="알림"

        android:textColor="@color/black"
        android:textSize="16sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/popup_text_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="120dp"

        android:fontFamily="@font/mitr_light"
        android:text="text"

        android:textColor="@color/black"
        android:textSize="16sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/popup_confirm"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:text="확인"
        android:fontFamily="@font/mitr_light"
        android:textSize="16dp"


        android:minWidth="0dp"
        android:minHeight="0dp"

        android:layout_marginEnd="24dp"

        android:backgroundTint="@color/white"
        app:cornerRadius="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintTop_toBottomOf="@id/popup_text_tv"
        app:layout_constraintEnd_toEndOf="parent"

        />



</androidx.constraintlayout.widget.ConstraintLayout>