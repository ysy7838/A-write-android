<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reset_close_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"


        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:layout_marginTop="120dp"
        android:fontFamily="@font/mitr_bold"
        android:text="비밀번호 재설정"

        android:textColor="@color/black"
        android:textSize="22sp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset_explain_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        android:fontFamily="@font/mitr_light"
        android:text="가입하신 이메일 주소로 비밀번호 재설정 메일을 보내드립니다."

        android:textColor="@color/black"
        android:textSize="14sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_title_tv" />

    <EditText
        android:id="@+id/reset_email_et"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background_edit_text"


        android:fontFamily="@font/mitr_regular"
        android:hint="이메일"

        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"

        android:textSize="18dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_explain_tv" />


    <Button
        android:id="@+id/reset_email_send_bt"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:text="이메일 보내기"
        android:fontFamily="@font/mitr_semibold"
        android:textSize="20dp"

        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        android:backgroundTint="@color/red"
        app:cornerRadius="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/reset_email_et"

        />

    <TextView
        android:id="@+id/reset_explain2_tv"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"

        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        android:layout_marginTop="24dp"


        android:textSize="12sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingStart="30sp"
        android:paddingEnd="20sp"
        android:textColor="@color/black"
        android:background="#EAEAEA"
        android:fontFamily="@font/mitr_medium"

        android:text="가입하신 이메일 주소로 비밀번호 재설정 메일을 전송했습니다. 비밀번호 재설정 메일의 링크를 클릭하면 새 비밀번호를 설정할 수 있습니다."
        android:gravity="center_vertical"

        app:layout_constraintTop_toBottomOf="@id/reset_email_send_bt"
        android:visibility="gone"
        />
    
    <ImageView
        android:id="@+id/reset_explain2_iv"

        android:layout_width="14sp"
        android:layout_height="14sp"

        android:layout_marginStart="30dp"

        android:layout_marginTop="10sp"
        android:src="@drawable/ic_greencheck"


        app:layout_constraintTop_toTopOf="@id/reset_explain2_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        />





</androidx.constraintlayout.widget.ConstraintLayout>