<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reset_close_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"


        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:layout_marginTop="65sp"
        android:fontFamily="@font/mitr_bold"
        android:text="비밀번호 재설정"

        android:textColor="@color/black"
        android:textSize="22sp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset_explain_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        android:fontFamily="@font/mitr_light"
        android:text="가입하신 이메일 주소로 비밀번호 재설정 메일을 보내드립니다."

        android:textColor="@color/black"
        android:textSize="14sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_title_tv" />

    <EditText
        android:id="@+id/reset_email_et"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background_edit_text"


        android:fontFamily="@font/mitr_bold"
        android:hint="이메일"

        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"

        android:textSize="18dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_explain_tv" />


    <Button
        android:id="@+id/reset_email_send_bt"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:text="이메일 보내기"
        android:fontFamily="@font/mitr_bold"
        android:textSize="20dp"

        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        android:backgroundTint="@color/gray"
        app:cornerRadius="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/reset_email_et"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:id="@+id/reset_line"

        android:background="@android:color/white"
        android:layout_marginTop="48dp"

        app:layout_constraintTop_toBottomOf="@id/reset_email_send_bt"
        />

    <Button
        android:id="@+id/reset_back_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"


        android:textColor="@color/black"
        android:text="뒤로"
        android:fontFamily="@font/mitr_light"
        android:textSize="14dp"
        android:gravity="left"

        android:drawableLeft="@drawable/ic_arrow"
        android:background="#00000000"

        app:layout_constraintTop_toBottomOf="@id/reset_line"
    />



</androidx.constraintlayout.widget.ConstraintLayout>