<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="22dp"
  >

    <androidx.cardview.widget.CardView
        android:id="@+id/item_post_cover_img_cardView"
        android:layout_width="116dp"
        android:layout_height="116dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_post_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_post_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="4월 13일-"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/item_post_cover_img_cardView"
        app:layout_constraintTop_toBottomOf="@id/item_post_cover_img_cardView" />

    <TextView
        android:id="@+id/item_post_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="2023.4.20"
        android:textColor="@color/black1"
        android:textSize="6sp"
        app:layout_constraintStart_toStartOf="@id/item_post_cover_img_cardView"
        app:layout_constraintTop_toBottomOf="@id/item_post_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>