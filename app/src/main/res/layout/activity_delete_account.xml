<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteAccountActivity">

    <ImageView
        android:id="@+id/previous_arrow_iv"
        android:layout_width="11dp"
        android:layout_height="16dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="28dp"
        android:clipToOutline="true"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/service_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/app_name_kor"
        android:textColor="@android:color/black"
        android:textFontWeight="600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previous_arrow_iv" />

    <TextView
        android:id="@+id/delete_account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="탈퇴하기"
        android:textColor="@android:color/black"
        android:textFontWeight="600"
        app:layout_constraintStart_toStartOf="@+id/service_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/service_name_tv" />

    <TextView
        android:id="@+id/delete_description_tv"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="회원 탈퇴 시 회원님의 계정 및 프로필, 모든 콘텐츠와 활동 기록이 삭제됩니다. 삭제된 정보는 어떤 경우에도 복구할 수 없으니 신중하게 결정해 주세요."
        android:textColor="@color/grayB"
        android:textFontWeight="500"
        app:layout_constraintStart_toStartOf="@+id/service_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/delete_account_tv" />

    <TextView
        android:id="@+id/current_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="헌재 비밀번호"
        android:textColor="@color/grayB"
        android:textFontWeight="500"
        app:layout_constraintStart_toStartOf="@+id/service_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/delete_description_tv" />

    <EditText
        android:id="@+id/current_password_input_etv"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/current_password_border"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingLeft="17dp"
        android:paddingTop="9dp"
        android:paddingBottom="8dp"
        android:textColorHint="@color/gray"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/service_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/current_password_tv" />

    <TextView
        android:id="@+id/back_btn"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/delete_account_back_btn"
        android:gravity="center"
        android:text="뒤로"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/withdraw_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/withdraw_btn"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/delete_account_withdraw_btn"
        android:gravity="center"
        android:text="탈퇴하기"
        android:textColor="@color/white"
        android:textFontWeight="600"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>