<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/email_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"

            android:textSize="22sp"
            android:textColor="@color/black"

            android:text="이메일 인증"
            android:layout_marginTop="65dp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/email_explain1_tv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"

            android:textSize="14sp"
            android:textColor="@color/black"

            android:text="'인증 메일 보내기' 버튼을 눌러 주세요."
            android:layout_marginTop="137dp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signup_2_linearLayout"
            app:layout_constraintTop_toBottomOf="@id/email_explain1_tv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email_explain2_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"

                android:text="등록한 이메일 주소로 인증 메일을 보내드릴게요.\n24시간 안에 링크를 열어 이메일 인증을 완료해주세요."
                android:textColor="@color/black"

                android:textSize="14sp"

                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/email_explain3_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="20dp"

                android:textSize="14sp"
                android:textColor="@color/black"

                android:text="인증 메일을 받지 못했거나, 이메일 주소를 바꾸려면\n아래 입력 칸에 이메일 주소를 올바르게 입력하고\n다시 인증 보내기 버튼을 눌러주세요."

                android:visibility="gone"
                />

            <EditText
                android:id="@+id/email_name_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="22dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"

                android:background="@drawable/background_edit_text"


                android:hint="이메일"
                android:inputType="text"

                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"

                android:textSize="18dp"
                />

            <Button
                android:id="@+id/email_send_button_tv"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:text="인증 코드 전송"
                android:fontFamily="@font/mitr_semibold"
                android:textSize="18dp"

                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="22dp"

                android:backgroundTint="@color/red"
                app:cornerRadius="15dp"
                android:textColor="@color/white"

                app:layout_constraintBottom_toBottomOf="parent"

                />

            <TextView
                android:id="@+id/email_login_button_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"

                android:layout_marginTop="12dp"

                android:textSize="18sp"
                android:textColor="@color/black"

                android:text="다른 계정으로 로그인하기"
                android:gravity="center"

                android:background="@drawable/background_text"

                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_login_button_tv"
                />

            <TextView
                android:id="@+id/email_explain4_tv"

                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_gravity="center_horizontal"

                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"

                android:layout_marginTop="24dp"

                android:textSize="12sp"
                android:paddingTop="5sp"
                android:paddingStart="12sp"
                android:textColor="@color/black"
                android:background="#EAEAEA"

                android:text="입력하신 이메일 주소로 인증 코드를 보냈어요."
                android:gravity="center_vertical"

                android:drawableLeft="@drawable/ic_greencheck"
                android:drawablePadding="10sp"

                android:visibility="gone"
                />

        </LinearLayout>

    <Button
        android:id="@+id/code_next_bt"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:text="인증 코드 입력하기"
        android:fontFamily="@font/mitr_semibold"
        android:textSize="22dp"

        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"

        android:backgroundTint="@color/red"
        app:cornerRadius="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"

        app:layout_constraintBottom_toBottomOf="parent"

        android:visibility="gone"
        />




    </androidx.constraintlayout.widget.ConstraintLayout>