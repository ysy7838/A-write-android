<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetActivity">

    <ImageView
        android:id="@+id/reset_back_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"


        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:layout_marginTop="65sp"
        android:fontFamily="@font/mitr_bold"
        android:text="사각사각"

        android:textColor="@color/black"
        android:textSize="22sp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset_explain_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        android:fontFamily="@font/mitr_light"
        android:text="비밀번호 재설정"

        android:textColor="@color/black"
        android:textSize="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_title_tv" />

    <TextView
        android:id="@+id/reset_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"

        android:fontFamily="@font/mitr_light"
        android:text="dd@sung"

        android:textColor="@color/black"
        android:textSize="12dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_explain_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:fontFamily="@font/mitr_light"
        android:text="의 비밀번호를 재설정합니다."

        android:textColor="@color/black"
        android:textSize="12dp"

        app:layout_constraintStart_toEndOf="@id/reset_email_tv"
        app:layout_constraintTop_toBottomOf="@id/reset_explain_tv" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="24dp"

        android:fontFamily="@font/mitr_light"
        android:text="새 비밀번호"

        android:textColor="@color/black"
        android:textSize="12dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_email_tv" />


    <EditText
        android:id="@+id/reset_pwd_et"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background_edit_text_v2"

        android:fontFamily="@font/mitr_light"
        android:hint="새 비밀번호"

        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"

        android:textSize="18dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_email_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="24dp"

        android:fontFamily="@font/mitr_light"
        android:text="새 비밀번호 확인"

        android:textColor="@color/black"
        android:textSize="12dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_pwd_et" />


    <EditText
        android:id="@+id/reset_newpwd_et"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background_edit_text_v2"

        android:fontFamily="@font/mitr_light"
        android:hint="새 비밀번호 확인"

        android:inputType="text"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"

        android:textSize="18dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_pwd_et" />


    <Button
        android:id="@+id/reset_complete_bt"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:text="저장"
        android:fontFamily="@font/mitr_bold"
        android:textSize="20dp"

        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"

        android:backgroundTint="@color/gray"
        app:cornerRadius="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"

        app:layout_constraintBottom_toBottomOf="parent"

        />




</androidx.constraintlayout.widget.ConstraintLayout>